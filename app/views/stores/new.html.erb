<form action="/stores" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a store name:</p>
  <input type='text' name='store[name]'/><br/>
  <p>Enter a store inventory:</p>
  <input type='integer' name='store[inventory]'/><br/>
  <p>Open on the weekends:</p>
  <input type="checkbox" name="store[open_on_weekends]"/><br/>
  <input type='submit'/>
</form>
