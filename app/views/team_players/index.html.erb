<nav class="container">

<h1>All Players on Team</h1>

<%= link_to "View Alphabetical Order", "/teams/#{@team.id}/players?order=name" %><br><br>

<h3>Search by Number:</h3>
  <%= form_with url: "/teams/#{@team.id}/players?search=price", method: :get, local: true do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %><br><br>
  <% end %>

<h2><a href="/teams/<%= @team.id %>/players/new">Add New Player</a></h2>

<% @players.each do |player| %>
<h1><%= player.name %></h1>
<p>Number: <%= player.number %></p>
<p>Injured: <%= player.injured %></p>
<a href="/teams/<%= @team.id %>/players/<%= player.id %>/edit"><button type="submit" class="btn btn-secondary">EDIT</button></a>
<%= button_to "Delete", "/teams/#{@team.id}/players/#{player.id}", method: :delete %>
<% end %><br>

